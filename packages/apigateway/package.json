{
  "name": "apigateway-service",
  "version": "0.0.2",
  "description": "",
  "main": "",
  "scripts": {
    "start": "NODE_ENV=prod node ./platforms/server/index.js",
    "prod": "npm run server:prod",
    "dev": "npm run server:dev",
    "build": "npm run build:server",
    "docker:build": "docker build -t todos_service . -f Dockerfile.dev",
    "docker:run": "docker run -p 3000:3000 todos_service",
    "server:prod": "npm run build:server && NODE_ENV=prod node ./platforms/server/index.js ",
    "server:dev": "npm run mongod & npm run webpack:dev",
    "mongod": "$HOME/Applications/mongodb/bin/mongod --dbpath $HOME/Applications/mongodb/data/db",
    "webpack:dev": "webpack --watch --config ./tools/config/server.webpack.js --env.dev",
    "build:server": "NODE_ENV=prod webpack --config ./tools/config/server.webpack.js --env.prod",
    "e2e": "protractor ./tools/config/test/protractor.conf.js",
    "test": "NODE_ENV=test nyc mocha-webpack --timeout 100000 --webpack-config ./tools/config/server.webpack.js  \"src/**/*.spec.ts\" --webpack-env.test",
    "coveralls": "NODE_ENV=test nyc report && cat ./coverage/lcov.info | coveralls",
    "doc:rest": "apidoc -i src/app/ -f '.*\\.docs.ts$' -o docs/rest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dockerode": "^2.5.3",
    "events": "^1.1.1",
    "express": "^4.16.2",
    "helmet": "^3.10.0",
    "morgan": "^1.9.0",
    "node-fetch": "^1.7.3",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/jasmine": "^2.8.5",
    "@types/node": "^9.3.0",
    "awesome-typescript-loader": "^3.4.1",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^4.3.1",
    "coveralls": "^3.0.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "mocha": "^5.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-webpack": "^1.0.1",
    "nodemon-webpack-plugin": "^0.1.6",
    "nyc": "^11.4.1",
    "sinon": "^4.2.1",
    "sinon-mongoose": "^2.0.2",
    "supertest": "^3.0.0",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4"
  }
}
