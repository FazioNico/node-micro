{
  "name": "node-micro",
  "version": "0.0.1",
  "description": "",
  "main": "",
  "scripts": {
    "start": "npm run docker:dev",
    "docker:dev": "docker-compose -f docker-compose.dev.yml build && docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose build && docker-compose up --build",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:clean": "docker rm $(docker ps -a -q) && docker rmi $(docker images -q)",
    "release": "lerna publish --skip-npm",
    "clean": "lerna clean",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
